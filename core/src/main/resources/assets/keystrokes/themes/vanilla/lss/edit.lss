.content {
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  padding: 0 4 4 4;

  .manage-container {
    border: 1 gray;

    .manage {
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
    }
  }

  .manage-button-container {
    left: 0;
    right: 0;
    bottom: 0;
    height: fit-content;
    margin-top: 4;

    Button {
      left: 0;
      top: 0;
    }

    .add-button {
      icon: sprite("common", 1, 1, 16);
    }

    .remove-button {
      icon: sprite("common", 0, 0, 16);
      color: red;
    }
  }
}

.overlay {
  priority-layer: very-front;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 100);

  .overlay-content {
    left: 50%;
    top: 50%;
    alignment-x: center;
    alignment-y: center;

    width: 70%;
    height: fit-content;

    * {
      left: 50%;
      alignment-x: center;
    }

    .title-add {
      top: 0;
      text-color: green;
    }

    .title-exit {
      top: 12;
      text-color: red;
    }
  }
}